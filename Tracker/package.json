{
  "name": "sales-tax-tracker",
  "version": "1.0.0",
  "description": "Comprehensive sales tax tracking application with POS and accounting integrations",
  "main": "dist/server.js",
  "scripts": {
    "start": "node -r tsconfig-paths/register dist/server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "cd frontend && npm run build",
    "debug": "nodemon --exec \"node --inspect -r ts-node/register -r tsconfig-paths/register src/server.ts\"",
    "dev:context7": "npm run context7:server &",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:landing:headed": "playwright test tests/e2e/landing-page-styling.spec.ts --headed --project=chromium",
    "test:landing:debug": "playwright test tests/e2e/landing-page-styling.spec.ts --debug --project=chromium",
    "test:ui": "playwright test --ui",
    "test:watch": "jest --watch",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "context7:server": "npx @upstash/context7-mcp --transport http --port 3002",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "tax-rates:update": "node scripts/update-tax-rates.js",
    "prepare": "husky",
    "security:scan": "./scripts/security-quick-scan.sh",
    "security:full": "./scripts/security-full-scan.sh",
    "security:audit": "./scripts/security-audit-deps.sh",
    "security:setup": "./scripts/security-setup.sh"
  },
  "keywords": [
    "sales-tax",
    "pos-integration",
    "accounting",
    "tax-compliance"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clerk/backend": "^2.9.0",
    "@mendable/firecrawl-js": "^1.29.3",
    "@prisma/client": "^6.14.0",
    "@sentry/integrations": "^7.114.0",
    "@sentry/node": "^10.3.0",
    "@sentry/tracing": "^7.120.4",
    "@types/bull": "^3.15.9",
    "@types/ioredis": "^4.28.10",
    "@types/nodemailer": "^6.4.17",
    "@types/pdfkit": "^0.12.12",
    "@types/redis": "^4.0.10",
    "auth0": "^4.28.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "canvas": "^3.1.2",
    "chart.js": "^4.5.0",
    "chartjs-node-canvas": "^5.0.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-jwt": "^8.5.1",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.7.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^7.0.5",
    "pdfkit": "^0.14.0",
    "pg": "^8.16.3",
    "prisma": "^6.14.0",
    "redis": "^5.8.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-jwt": "^6.0.4",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@upstash/context7-mcp": "^1.0.14",
    "concurrently": "^8.2.2",
    "eslint": "^8.47.0",
    "husky": "^9.1.7",
    "jest": "^29.6.4",
    "lint-staged": "^16.1.5",
    "mongodb-memory-server": "^9.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "backend/**/*.{js,ts}": [
      "eslint --config .eslintrc.backend.js --fix",
      "prettier --write"
    ],
    "frontend/**/*.{ts,tsx}": [
      "cd frontend && npm run lint -- --fix",
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
